<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaAdicao">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#3F51B5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="1sp"
                android:onClick="TelaHome"
                app:srcCompat="@drawable/home__1_" />

            <TextView
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="17dp"
                android:fontFamily="monospace"
                android:text="Multiplicação"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:onClick="TelaMultiplicacao"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="17dp"
                android:fontFamily="monospace"
                android:text="Subtração"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:onClick="TelaSubtracao"
                />

            <TextView
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="17dp"
                android:fontFamily="monospace"
                android:text="Divisão"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:onClick="TelaDivisao"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:fontFamily="monospace"
            android:text="Tabuada de Adição"
            android:textAlignment="center"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="40sp"
            android:layout_marginRight="20sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="calcular"
                android:text="Tabuada do número:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextNum1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20sp"
            android:layout_marginRight="40sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Até o número:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextNum2A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="40sp"
            android:backgroundTint="#3F51B5"
            android:onClick="calcular"
            android:text="Calcular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/max_analisando__1___1___1_" />

            <ScrollView
                android:layout_width="199dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewResultA"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:text="Resultado:"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>